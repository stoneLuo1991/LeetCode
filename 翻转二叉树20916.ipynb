   "source": [
    "## 翻转二叉树\n",
    "思路：1. 递归；2. bfs"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [],
   "source": [
    "def invert_tree_recursive(root):\n",
    "    if not root:\n",
    "        return root\n",
    "    left = invert_tree_recursive(root.left)\n",
    "    right = invert_tree_recursive(root.right)\n",
    "    root.left, root.right = right, left\n",
    "    return root"
   ]
  },
